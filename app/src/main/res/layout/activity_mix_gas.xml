<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spChannelThreeState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <Spinner
        android:id="@+id/spChannelTwoState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-2dp"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="数据:"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintLeft_toRightOf="@+id/etSettingCommand"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="命令:"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintLeft_toRightOf="@+id/etSettingId"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tvMassFlowControllerRealTimeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="ID = 1 \nID = 2 \nID = 3"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/etChannelOneFlowRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:ems="4"
        android:inputType="number"
        android:maxLength="4"
        android:text="100"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/btnAcquisitionController"
        app:layout_constraintLeft_toRightOf="@+id/spChannelOneValueState"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/etChannelTwoFlowRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:ems="4"
        android:inputType="number"
        android:maxLength="4"
        android:text="100"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/spChannelTwoState"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp" />

    <EditText
        android:id="@+id/etChannelThreeFlowRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:ems="4"
        android:inputType="number"
        android:maxLength="4"
        android:text="100"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/spChannelThreeState"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/btnChannelOneSetFlowRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="确定"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/etChannelOneFlowRate"
        app:layout_constraintTop_toTopOf="@+id/etChannelOneFlowRate"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/btnChannelThreeSetFlowRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="确定"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/etChannelThreeFlowRate"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/btnChannelTwoSetFlowRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="确定"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/etChannelTwoFlowRate"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/btnAcquisitionController"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="查询流量"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMassFlowControllerRealTimeInfo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="设置流量 通道1"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAcquisitionController"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text=" 通道2"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintLeft_toRightOf="@+id/btnChannelOneSetFlowRate"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginStart="24dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text=" 通道3"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintLeft_toRightOf="@+id/btnChannelTwoSetFlowRate"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginStart="24dp" />

    <Button
        android:id="@+id/btnSettingController"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="参数设置"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/btnGetSetting"
        app:layout_constraintTop_toTopOf="@+id/etSettingId"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/etSettingId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:ems="2"
        android:inputType="number"
        android:maxLength="2"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/etSettingCommand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:ems="4"
        android:inputType="text"
        android:maxEms="4"
        android:text="RCVS"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/etSettingId" />

    <EditText
        android:id="@+id/etSettingData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:ems="4"
        android:inputType="number"
        android:maxEms="4"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/etSettingId"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/btnGetSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="读取设置"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/etSettingData"
        app:layout_constraintTop_toTopOf="@+id/etSettingId"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="调试命令 ID:"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/btnSettingParameter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="系数设置"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/btnSettingController"
        app:layout_constraintTop_toTopOf="@+id/btnGetSetting"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tvCommandInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="None"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintLeft_toRightOf="@+id/btnAcquisitionController"
        app:layout_constraintTop_toTopOf="@+id/btnAcquisitionController"
        android:layout_marginStart="8dp" />

    <Spinner
        android:id="@+id/spChannelOneValueState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:defaultFocusHighlightEnabled="false"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />
</android.support.constraint.ConstraintLayout>